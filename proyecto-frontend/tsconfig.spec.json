{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist/out-tsc/spec",
    "types": ["jasmine"],
    "esModuleInterop": true,
    "module": "es2020"
  },
  "include": [
    "src/**/*.spec.ts",
    "src/**/*.d.ts",
    "src/**/*.ts" // Asegura que los archivos de código también estén incluidos para cobertura
  ],
  "exclude": [
    "node_modules",
    "dist",
    "coverage"
  ]
}
